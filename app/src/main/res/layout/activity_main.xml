<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android Security"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="30sp" />

    <View
        android:id="@+id/line1"
        android:layout_below="@id/baslik"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/showRunProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:text="Show Running Process"
        android:onClick="showRunningProcess"
        />
    <Button
        android:id="@+id/showPhoneFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showRunProcess"
        android:text="Show Phone Features"
        android:onClick="showPhoneFeatures"
        />


</RelativeLayout>